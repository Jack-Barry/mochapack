{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*"]
}
